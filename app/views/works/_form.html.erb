<%= form_with model: @work, class: 'work-form' do |f| %>
<p>Please provide the following information to <%= message %>:</p>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "#{button_action} work", class: "work-button" %>

<% end %>